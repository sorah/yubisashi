<h1>Listing entries</h1>

<table>
  <tr>
    <th>English</th>
    <th>Japanese</th>
    <th>Romaji</th>
    <th>Comment</th>
    <th>Group</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @entries.each do |entry| %>
  <tr>
    <td><%= entry.english %></td>
    <td><%= entry.japanese %></td>
    <td><%= entry.romaji %></td>
    <td><%= entry.comment %></td>
    <td><%= entry.group_id %></td>
    <td><%= link_to 'Show', entry %></td>
    <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
    <td><%= link_to 'Destroy', entry, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

